{
  "name": "app-build-engine",
  "version": "1.0.0",
  "description": "React Application Webpack Build Engine",
  "main": "lib/index.js",
  "scripts": {
    "source": "rimraf ./lib && babel src --out-dir lib -s",
    "cli": "babel cli/index.js > index.js",
    "build": "npm run source && npm run cli",
    "engine:lint": "eslint 'src/**/*.js' -f table --fix",
    "test:lint": "eslint -c specs/.eslintrc 'specs/**/*.spec.js' -f table --no-eslintrc",
    "test:watch": "jest --config=specs/jest-config.json --watch",
    "test": "exit 0",
    "lint": "npm run engine:lint && npm run test:lint",
    "posttest": "npm run build",
    "prepublish": "npm run test",
    "doc": "jsdoc -c conf.json -R README.md",
    "check": "npm-check -u"
  },
  "keywords": [
    "React",
    "Webpack",
    "Boilerplate",
    "Application",
    "Build",
    "Engine"
  ],
  "precommit": [
    "test",
    "build"
  ],
  "author": {
    "name": "SAPIENT",
    "email": "skumar146@sapient.com"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">= 6",
    "npm": ">= 3"
  },
  "dependencies": {
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.1",
    "babel-preset-build-engine": "^1.0.0",
    "babel-watch": "^2.0.6",
    "chalk": "^2.0.1",
    "commander": "^2.11.0",
    "cross-env": "^5.0.1",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.4",
    "eslint-config-build-engine": "^1.0.2",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.29.0",
    "http-server": "^0.10.0",
    "ink-docstrap": "^1.3.0",
    "jest": "^21.2.1",
    "jsdoc": "^3.5.0",
    "json-server": "^0.12.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-check": "^5.4.4",
    "postcss-loader": "^2.0.6",
    "pre-commit": "^1.2.2",
    "react-addons-test-utils": "^15.6.2",
    "resolve-url-loader": "^2.1.0",
    "rimraf": "^2.6.1",
    "sass-lint": "^1.12.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-formatter-table": "^1.0.3",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "mock-fs": "^4.4.1"
  },
  "bin": {
    "engine": "./index.js"
  }
}
